<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ECF0EA"
    tools:context=".MainActivity">


    <com.synnapps.carouselview.CarouselView
        android:layout_marginTop="5dp"
        android:id="@+id/carouselView"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        app:fillColor="#FFFFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:pageColor="#00000000"
        app:radius="6dp"
        app:slideInterval="3000"
        app:strokeColor="#FF777777"
        app:strokeWidth="1dp"

        tools:ignore="MissingConstraints" />


    <TableRow
        android:layout_width="351dp"
        android:layout_height="match_parent"
        android:layout_margin="2dp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="7dp"
        android:layout_marginRight="4dp">

        <Button
            android:id="@+id/tourist"

            android:layout_width="160dp"
            android:layout_height="118dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="1dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="1dp"
            android:background="@drawable/sya1" />

        <Button
            android:id="@+id/rest1"
            android:layout_width="160dp"
            android:layout_height="118dp"
            android:layout_marginLeft="-4dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="32dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="4dp"
            android:background="@drawable/rest1" />
    </TableRow>


    <TableRow
        android:layout_width="376dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_tourist"
            android:layout_width="131dp"
            android:layout_height="32dp"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="-10dp"
            android:layout_marginRight="30dp"

            android:layout_marginBottom="2dp"
            android:gravity="center_horizontal"
            android:text="@string/tourist_areas"
            android:textColor="#253D0A"
            android:textColorHint="@color/vpi__background_holo_dark"
            android:textSize="18sp"
            android:textStyle="bold"
            app:autoSizeTextType="none"
            app:fontFamily="serif" />

        <TextView
            android:id="@+id/text_rest"
            android:layout_width="131dp"
            android:layout_height="32dp"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="-10dp"
            android:textColor="#253D0A"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="2dp"
            android:gravity="center"
            android:text="Resturants"
            android:textSize="18sp"
            android:textStyle="bold"
            app:fontFamily="serif" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="2dp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="3dp">

        <Button
            android:id="@+id/arch"
            android:layout_width="160dp"
            android:layout_height="118dp"

            android:layout_marginLeft="2dp"
            android:layout_marginTop="1dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="1dp"
            android:background="@drawable/ath1"
            android:visibility="visible" />

        <Button
            android:id="@+id/hotel1"
            android:layout_width="160dp"
            android:layout_height="118dp"

            android:layout_marginLeft="-4dp"
            android:layout_marginTop="1dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="4dp"
            android:background="@drawable/hotel1" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="30dp">

        <TextView
            android:layout_width="131dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="-10dp"

            android:layout_marginRight="30dp"
            android:layout_marginBottom="2dp"
            android:gravity="center"
            android:text="Archaeological Areas"
            android:textColor="#253D0A"
            android:textSize="18sp"
            android:textStyle="bold"
            app:autoSizeTextType="none"
            app:fontFamily="serif" />

        <TextView
            android:id="@+id/text_hotel"
            android:layout_width="131dp"
            android:layout_height="32dp"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="-10dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="2dp"
            android:gravity="center"
            android:text="Hotels"
            android:textColor="#253D0A"
            android:textSize="18sp"
            android:textStyle="bold"
            app:fontFamily="serif" />

    </TableRow>


    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/nav_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginTop="-18dp"
        android:layout_marginEnd="0dp"

        android:background="#E9DDDD"
        android:textSize="@dimen/design_bottom_navigation_text_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/bottom_nav_menu" />


</TableLayout>


